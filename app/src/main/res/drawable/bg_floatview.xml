<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 设置透明背景色 -->
    <solid android:color="@color/colorAccent" />
    <!-- 设置一个黑色边框 -->
    <stroke
        android:width="0px"
        android:color="#00ffffff" />
    <!-- 设置四个圆角的半径 -->
    <corners
        android:bottomLeftRadius="200px"
        android:bottomRightRadius="200px"
        android:topLeftRadius="200px"
        android:topRightRadius="200px" />
    <!-- 设置一下边距,让空间大一点 -->
    <padding
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp" />
</shape>